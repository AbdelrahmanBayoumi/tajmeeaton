"""


def generate_readme():
    return readme_template.format(description)


cache_dir=".cache"
if os.path.isfile(cache_dir):
    raise "file exists in the same place of cache dir: " + cache_dir
if not os.path.isdir(cache_dir):
    os.mkdir(cache_dir)


